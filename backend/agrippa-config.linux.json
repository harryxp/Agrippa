{
    "preferences": {
        "showHelpByDefault": true,
        "host": "127.0.0.1",
        "port": 3000,
        "defaultTask": { "name": "Google Search by Default"
                       , "plugin": "OnlineSearch"
                       , "url": "https://www.google.com/search?q=${q}"
                       }
    },

    "tasks": {
        "=":   { "name": "Calculator"
               , "plugin": "Calculator"
               },

        "'":   { "name": "Search for Files"
               , "plugin": "FileSearch"
               , "paths": []
               },

        "e":   { "name": "Launch Executables"
               , "plugin": "ExecutableLauncher"
               , "paths": ["/bin/", "/usr/bin/", "/usr/local/bin/", "/opt/plan9/bin/"]
               },

        "d":   { "name": "Dictionary"
               , "plugin": "OnlineSearch"
               , "url": "https://www.merriam-webster.com/dictionary/${q}"
               },
        "z":   { "name": "Amazon Search"
               , "plugin": "OnlineSearch"
               , "url": "https://www.amazon.com/s?field-keywords=${q}"
               },
        "h":   { "name": "Haskell Search"
               , "plugin": "OnlineSearch"
               , "url": "https://www.google.com/search?q=haskell+${q}"
               },
        "ho":  { "name": "Home"
               , "plugin": "OnlineSearch"
               , "url": "http://peachful.space"
               },
        "p":   { "name": "Pursuit Search"
               , "plugin": "OnlineSearch"
               , "url": "https://pursuit.purescript.org/search?q=${q}"
               },
        "w":   { "name": "Wikipedia Search"
               , "plugin": "OnlineSearch"
               , "url": "https://wikipedia.org/wiki/Special:Search/${q}"
               },
        "y":   { "name": "YouTube Search"
               , "plugin": "OnlineSearch"
               , "url": "http://www.youtube.com/results?search_query=${q}"
               }
    }
}
